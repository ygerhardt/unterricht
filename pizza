class Pizza:
    pizzaAnzahl = 0
    defaultSauce = "Tomaten"
    def __init__(self, beilage_1, pilze, käse, pepperoni, oliven, stücke):
        self.beilage_1 = beilage_1
        self.pilze = pilze
        self.käse = käse
        self.pepperoni = pepperoni
        self.oliven = oliven
        self.stücke = stücke
        Pizza.pizzaAnzahl += 1
    def pizza_belegen(self, beilage):
        self.beilage_1 = beilage
       
pizza1 = Pizza("salami",True,True,False,False,8)
print(pizza1.beilage_1)
pizza1.pizza_belegen("käse")
print(pizza1.beilage_1)


